# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mindsdb_rag
DB_USERNAME=postgres
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# MindsDB Configuration (Self-Hosted)
MINDSDB_HOST=localhost
MINDSDB_PORT=47334
MINDSDB_ENDPOINT=http://localhost:47334
MINDSDB_API_KEY=
MINDSDB_TIMEOUT=30000
MINDSDB_USERNAME=
MINDSDB_PASSWORD=

# OpenAI Configuration for RAG (required for knowledge bases and agents)
OPENAI_API_KEY=your_openai_api_key_here

# Bedrock Configuration
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=amazon.nova-micro-v1:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7
BEDROCK_AGENT_ID=
BEDROCK_AGENT_ALIAS_ID=TSTALIASID

# DynamoDB Configuration
SESSION_TABLE_NAME=mindsdb-rag-sessions-dev
SESSION_TTL_HOURS=24

# Amazon Q Configuration
AMAZON_Q_APPLICATION_ID=
AMAZON_Q_INDEX_ID=

# Audit Logging Configuration
AUDIT_LOGS_BUCKET=
AUDIT_LOGS_KMS_KEY=
AUDIT_LOG_GROUP=/aws/mindsdb-rag/conversations
AUDIT_RETENTION_DAYS=2555

# AWS Cognito Configuration
# User Pool ID from AWS Cognito Console (e.g., us-east-1_XXXXXXXXX)
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
# App Client ID from Cognito User Pool
COGNITO_CLIENT_ID=your_cognito_client_id_here
# AWS Region where Cognito User Pool is deployed
COGNITO_REGION=us-east-1
# Enable Cognito authentication (set to false for development with mock auth)
ENABLE_COGNITO_AUTH=true
# Disable authentication entirely for local development (overrides ENABLE_COGNITO_AUTH)
DISABLE_AUTH_FOR_DEVELOPMENT=false

# Security Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_MEMORY=256mb

# Monitoring Configuration
METRICS_ENABLED=true
TRACING_ENABLED=false

# Background Jobs Configuration
ENABLE_JOB_SCHEDULER=false
USAGE_AGGREGATION_INTERVAL=3600000
ENABLE_USAGE_AGGREGATION=true

# CDK Deployment Configuration
CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=us-east-1
STACK_NAME=MindsDBRAGAssistant
ENVIRONMENT=dev