# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=

# Development Mode (set to 'true' to bypass authentication)
NEXT_PUBLIC_DEV_MODE=false
DEV_MERCHANT_ID=test-merchant-123
DEV_ACCESS_TOKEN=dev-token-12345

# AWS Cognito Configuration
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
COGNITO_ISSUER=https://cognito-idp.{region}.amazonaws.com/{user-pool-id}
COGNITO_DOMAIN={your-domain}.auth.{region}.amazoncognito.com

# Cognito OAuth Redirect URLs (must be configured in Cognito App Client settings)
# Callback URLs: http://localhost:3001/api/auth/callback/cognito, https://portal.mindshop.com/api/auth/callback/cognito
# Logout URLs: http://localhost:3001, https://portal.mindshop.com
